rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Function to check if the user is authenticated (including anonymous)
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Function to check if the user is anonymous
    function isAnonymous() {
      return request.auth != null && request.auth.token.firebase.sign_in_provider == 'anonymous';
    }
    
    // Function to check if the user is an admin
    function isAdmin() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users-admin/$(request.auth.uid));
    }
    
    // Survey collection rules
    match /surveys/{surveyId} {
      // Allow users to create their own surveys (including anonymous)
      allow create: if isSignedIn();
      
      // Allow read for anonymous users too
      allow read: if isSignedIn();
      
      // Only admins can update or delete
      allow update, delete: if isAdmin();
    }
    
    // Hospitals collection rules
    match /hospitals-rcems/{hospitalId} {
      // Allow all users to read hospital data (including anonymous)
      allow read: if true;
      
      // Only admins can modify hospital data
      allow write: if isAdmin();
    }
    
    // Admin users collection (to store admin UIDs)
    match /users-admin/{userId} {
      // Only admins can read the admin list
      allow read: if isAdmin();
      
      // Only admins can modify the admin list
      allow write: if isAdmin();
    }

    // Users collection rules
    match /users/{userId} {
      // Allow users to read and write their own data
      allow read, write: if request.auth.uid == userId;
      // Allow admins to read all user data
      allow list: if isAdmin();
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}